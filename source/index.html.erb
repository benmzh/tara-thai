  <div class="tt-book-online tt-section" id="book-online">
    <img class="tt-swirl-icon" src="images/tt-swirl-red.png" alt="Tara Thai Swirl Icon">
    <h1 class="h1">Book Online</h1>
    <h2 class="h2">จองออนไลน์</h2>
    <form class="tt-booking-form" method="post" action="https://web-workshop-messenger.herokuapp.com/f/a36e9d">
      <input type="text" maxlength="255" name="stage_left" value="" style="position:absolute; left:-5000px; opacity: 0; z-index: -1;">
      <div class="tt-contact-item">
        <h3>Full Name</h3>
        <input class="tt-booking-form-item" type="text" maxlength="255" id="full-name" name="full-name">
      </div>
      <div class="tt-contact-item">
        <h3>Email Address</h3>
        <input class="tt-booking-form-item" type="email" maxlength="255" id="email-address" name="email-address" required>
      </div>
      <div class="tt-contact-item">
        <h3>Phone Number</h3>
        <input class="tt-booking-form-item" type="text" maxlength="255" id="phone-number" name="phone-number" required>
      </div>
      <div class="tt-contact-item">
        <h3>Date</h3>
        <select class="tt-booking-form-item" maxlength="255" id="date" name="date">
          <option><script src="javascripts/today.js"></script></option>
          <option><script src="javascripts/today-plus-1.js"></script></option>
          <option><script src="javascripts/today-plus-2.js"></script></option>
          <option><script src="javascripts/today-plus-3.js"></script></option>
          <option><script src="javascripts/today-plus-4.js"></script></option>
          <option><script src="javascripts/today-plus-5.js"></script></option>
          <option><script src="javascripts/today-plus-6.js"></script></option>
          <option><script src="javascripts/today-plus-7.js"></script></option>
          <option><script src="javascripts/today-plus-8.js"></script></option>
          <option><script src="javascripts/today-plus-9.js"></script></option>
          <option><script src="javascripts/today-plus-10.js"></script></option>
          <option><script src="javascripts/today-plus-11.js"></script></option>
          <option><script src="javascripts/today-plus-12.js"></script></option>
          <option><script src="javascripts/today-plus-13.js"></script></option>
          <option value="Other - See message">Other Date - please specify in 'Special Requirements'</option>
        </select>
      </div>
      <div class="tt-contact-item tt-contact-item-half">
        <h3>Time</h3>
        <input class="tt-booking-form-item" type="text" maxlength="255" id="time" name="time">
      </div>
      <div class="tt-contact-item tt-contact-item-half tt-contact-item-half-right">
        <h3>Guests</h3>
        <input class="tt-booking-form-item" type="number" min="1" max="100" maxlength="255" id="guests" name="guests">
      </div>
      <br>
      <div class="tt-contact-item tt-contact-item-clear">
        <h3>Special Requirements</h3>
        <textarea class="tt-booking-form-item" placeholder="If you have any special requirements (e.g. dietary), please let us know here." rows="4" maxlength="4000" id="message" name="message"></textarea>
      </div>
      <div class="tt-contact-item tt-contact-item-centred">
        <input type="hidden" name="site" value="tara-thai">
        <input type="submit" value="Place Your Booking" class="button tt-cta-button tt-contact-button">
      </div>
      <div class="tt-contact-item tt-contact-item-centred">
        <input class="tt-reset-button tt-contact-button" type="reset">
      </div>
    </form>
  </div>
